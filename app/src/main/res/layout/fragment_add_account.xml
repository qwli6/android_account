<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/toolbarColor">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:paddingStart="@dimen/activity_margin"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:paddingEnd="@dimen/activity_margin"
        android:orientation="horizontal"
        android:background="@drawable/item_click_selector"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:text="账户金额"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingStart="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:textSize="16sp"
            android:inputType="number"
            android:hint="账户金额"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/lineDividerColor"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:paddingStart="@dimen/activity_margin"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:paddingEnd="@dimen/activity_margin"
        android:orientation="horizontal"
        android:background="@drawable/item_click_selector"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:text="账户名称"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingStart="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:maxLength="8"
            android:textSize="16sp"
            android:hint="账户名称（不超过8个汉字）"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/lineDividerColor"/>
    <LinearLayout
        android:id="@+id/add_account_icon"
        android:layout_gravity="center_vertical"
        android:paddingStart="@dimen/activity_margin"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:paddingEnd="@dimen/activity_margin"
        android:orientation="horizontal"
        android:background="@drawable/item_click_selector"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:text="账户图标"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_zhichu_type_canyin"
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/lineDividerColor"/>
    <LinearLayout
        android:id="@+id/add_account_color"
        android:background="@drawable/item_click_selector"
        android:layout_gravity="center_vertical"
        android:paddingStart="@dimen/activity_margin"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:paddingEnd="@dimen/activity_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:text="账户颜色"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_zhichu_type_canyin"
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/lineDividerColor"/>


    <Button
        android:id="@+id/save_type"
        android:layout_marginTop="@dimen/activity_margin"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_selector"
        android:text="保存"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginEnd="@dimen/activity_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
