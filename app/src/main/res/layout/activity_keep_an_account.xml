<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        app:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar"
            app:navigationIcon="@drawable/ic_arrow_white_black_24dp"
            app:titleTextColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

            <TextView
                android:id="@+id/change_income_expend"
                android:layout_gravity="end"
                android:gravity="center"
                android:padding="@dimen/activity_margin"
                android:drawablePadding="@dimen/text_padding"
                android:drawableLeft="@drawable/ic_change_white_24dp"
                android:drawableStart="@drawable/ic_change_white_24dp"
                android:textColor="@android:color/white"
                android:text="@string/change_income_expend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/lineDividerColor"/>

   <FrameLayout
       android:background="@android:color/white"
       android:id="@+id/keep_an_account_container"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1">

   </FrameLayout>

</LinearLayout>
