<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <ImageView
            android:id="@+id/question_feedback_back"
            android:background="?selectableItemBackground"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:paddingTop="@dimen/activity_margin"
            android:paddingBottom="@dimen/activity_margin" />
        <TextView
            android:text="@string/question_feed_back"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/xx_normal_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/feedback_content"
        android:background="@drawable/edittext_rect_border"
        android:padding="@dimen/text_padding"
        android:gravity="top"
        android:textSize="@dimen/s_normal_size"
        android:hint="@string/question_feed_back_hint"
        android:layout_marginTop="@dimen/activity_margin"
        android:layout_marginEnd="@dimen/activity_margin"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

    <Button
        android:id="@+id/commit_feedback"
        android:layout_margin="@dimen/activity_margin"
        android:text="@string/commit_feedback"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:gravity="center"
        android:text="还有更快速的联系方式"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
