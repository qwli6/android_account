<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">
            <ImageView
                android:id="@+id/setting_back"
                android:background="?selectableItemBackground"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:paddingTop="@dimen/activity_margin"
                android:paddingBottom="@dimen/activity_margin" />
            <TextView
                android:text="@string/home_mine_settings"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:textSize="@dimen/xx_normal_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:background="#eeeeee"
            android:textColor="#949494"
            android:textSize="@dimen/s_normal_size"
            android:paddingTop="@dimen/text_padding"
            android:paddingBottom="@dimen/text_padding"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:text="@string/write_down_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/relative_layout_set_budget"
            android:background="?selectableItemBackground"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_item_height">
            <TextView
                android:layout_centerVertical="true"
                android:text="@string/month_budget"
                android:textSize="@dimen/normal_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/budget_right"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/gray_color"
                android:layout_marginEnd="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:id="@+id/budget_money_textview"
                android:layout_toStartOf="@id/budget_right"
                android:layout_toLeftOf="@id/budget_right"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_height="@dimen/divider_line_height"
            android:background="@color/divider_line_color"/>
        <RelativeLayout
            android:background="?selectableItemBackground"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_item_height">
            <TextView
                android:layout_centerVertical="true"
                android:text="@string/month_start_day"
                android:textSize="@dimen/normal_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:background="#eeeeee"
            android:textColor="#949494"
            android:textSize="@dimen/s_normal_size"
            android:paddingTop="@dimen/text_padding"
            android:paddingBottom="@dimen/text_padding"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:text="@string/apply_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:background="?selectableItemBackground"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_item_height">
            <TextView
                android:layout_centerVertical="true"
                android:text="自动同步"
                android:textSize="@dimen/normal_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_height="@dimen/divider_line_height"
            android:background="@color/divider_line_color"/>

        <RelativeLayout
            android:id="@+id/relative_layout_keep_accounts_attention"
            android:background="?selectableItemBackground"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_item_height">
            <TextView
                android:layout_centerVertical="true"
                android:text="@string/keep_accounts_attention"
                android:textSize="@dimen/normal_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:background="#eeeeee"
            android:textColor="#949494"
            android:textSize="@dimen/s_normal_size"
            android:paddingTop="@dimen/text_padding"
            android:paddingBottom="@dimen/text_padding"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:text="@string/setting_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/question_feedback"
            android:background="?selectableItemBackground"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_item_height">
            <TextView
                android:layout_centerVertical="true"
                android:text="@string/question_feed_back"
                android:textSize="@dimen/normal_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_height="@dimen/divider_line_height"
            android:background="@color/divider_line_color"/>

        <RelativeLayout
            android:background="?selectableItemBackground"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_item_height">
            <TextView
                android:layout_centerVertical="true"
                android:text="@string/clear_data_cache"
                android:textSize="@dimen/normal_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_height="@dimen/divider_line_height"
            android:background="@color/divider_line_color"/>

        <RelativeLayout
            android:id="@+id/relative_layout_about"
            android:background="?selectableItemBackground"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_item_height">
            <TextView
                android:layout_centerVertical="true"
                android:text="@string/about"
                android:textSize="@dimen/normal_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_height="@dimen/divider_line_height"
            android:background="@color/divider_line_color"/>
        <RelativeLayout
            android:id="@+id/relative_layout_check_update"
            android:background="?selectableItemBackground"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_item_height">
            <TextView
                android:layout_centerVertical="true"
                android:text="@string/check_update"
                android:textSize="@dimen/normal_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/show_version_name"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/text_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_height="@dimen/divider_line_height"
            android:background="@color/divider_line_color"/>
        <RelativeLayout
            android:id="@+id/relative_layout_support_for_pay"
            android:background="?selectableItemBackground"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_item_height">
            <TextView
                android:layout_centerVertical="true"
                android:text="@string/pay_for_support"
                android:textSize="@dimen/normal_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_height="@dimen/divider_line_height"
            android:background="@color/divider_line_color"/>
    </LinearLayout>
</ScrollView>

